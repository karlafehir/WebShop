@model List<Category>

<div class="container">
    <div class="row pt-4">
        <div class="col-6"> 
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-asp-controller="Category" asp-action="" class="btn btn-primary">
                <i class="bi bi-plus"></i>Create new category
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
   <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
   </thead>
   <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <th>@category.Name</th>
                <th>@category.DisplayOrder</th>
            </tr>
        }
   </tbody>
</table>
